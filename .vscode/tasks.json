{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "make -f ${workspaceFolder}/Engine/Build.Windows.mak all"
            },
            "linux": {
                "command": "make -f ${workspaceFolder}/Engine/Build.Linux.mak all"
            },
            "options": {
                "cwd": "${workspaceFolder}/Engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Editor",
            "windows": {
                "command": "make -f ${workspaceFolder}/Editor/Build.Windows.mak all"
            },
            "linux": {
                "command": "make -f ${workspaceFolder}/Editor/Build.Linux.mak all"
            },
            "options": {
                "cwd": "${workspaceFolder}/Editor"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build everything",
            "windows": {
                "command": "${workspaceFolder}/Build.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/Build.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}